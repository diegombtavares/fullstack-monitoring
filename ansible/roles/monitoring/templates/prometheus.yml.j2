global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'node_exporter'
    static_configs:
      - targets:
{% for target in node_exporter_targets %}
          - '{{ target }}'
{% endfor %}

  - job_name: 'app_latency'
    metrics_path: /metrics
    static_configs:
      - targets:
{% for target in app_latency_targets %}
          - '{{ target }}'
{% endfor %}

  - job_name: 'cadvisor'
    metrics_path: /metrics
    static_configs:
      - targets:
{% for target in cadvisor_targets %}
          - '{{ target }}'
{% endfor %}